<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/bgPurple"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/levelStar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />
        <ImageView
            android:id="@+id/levelStar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />

    </LinearLayout>


    <TextView
        android:id="@+id/chooseThemeNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/chooseTheme"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1st -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewCutlery"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/cutlery" />

                    <TextView
                        android:id="@+id/textViewCutlery"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/cutlery"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCutlery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewFood"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/food" />

                    <TextView
                        android:id="@+id/textViewFood"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/food"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 2nd -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewAnimals"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/dog" />

                    <TextView
                        android:id="@+id/textViewAnimals"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/animals"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnAnimals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewLivingRoom"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/light" />

                    <TextView
                        android:id="@+id/textViewLivingRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/livingRoom"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnLivingRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 3rd -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewFlower"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/lotus" />

                    <TextView
                        android:id="@+id/textViewFlower"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/flower"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnFlower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewScenery"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/playground_rgb" />

                    <TextView
                        android:id="@+id/textViewScenery"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/scenery"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnScenery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 4th -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewSnacks"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/snacks" />

                    <TextView
                        android:id="@+id/textViewSnacks"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/snacks"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSnacks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewHouseholdItems"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/householditems" />

                    <TextView
                        android:id="@+id/textViewHouseholdItems"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/householdItems"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnHouseholdItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/buttonHomePage"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:background="@drawable/orange_btn"
        android:text="@string/homePage"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@null" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_weight="0.1"
        android:background="@color/bgPurple" />
</LinearLayout>
