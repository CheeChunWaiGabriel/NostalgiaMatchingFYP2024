<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/bgPurple"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/levelStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/levelStar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/levelStar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/chooseTheme"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- First Row -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewParrot"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/parrot" />

                    <TextView
                        android:id="@+id/textViewParrot"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/Parrot"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnParrot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewdimsum"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/dimsum" />

                    <TextView
                        android:id="@+id/textViewdimsum"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/DimSum"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btndimSum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 2nd -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewTingkat"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/tingkat" />

                    <TextView
                        android:id="@+id/textViewTingkat"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/Tingkat"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnTingkat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewMahjong"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/mahjong" />

                    <TextView
                        android:id="@+id/textViewMahjong"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/Mahjong"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnMahjong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 3rd -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewOrchid"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/orchid" />

                    <TextView
                        android:id="@+id/textViewOrchid"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/Orchid"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnOrchid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewSatay"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/satay" />

                    <TextView
                        android:id="@+id/textViewSatay"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/Satay"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnSatay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

            <!-- 4th -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewGoldcoins"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/goldcoins" />

                    <TextView
                        android:id="@+id/textViewGoldcoins"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="@string/GoldCoins"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnGoldCoins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/imageViewWeddingBasket"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/wedding_basket" />

                    <TextView
                        android:id="@+id/textViewWeddingBaskets"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="@string/WeddingBasket"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnWeddingBasket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/orange_btn"
                        android:text="@string/start"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        app:backgroundTint="@null" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/buttonHomePage"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:background="@drawable/orange_btn"
        android:text="@string/homePage"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@null" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/bgPurple" />
</LinearLayout>