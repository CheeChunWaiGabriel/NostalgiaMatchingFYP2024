<!-- res/drawable/combined_icons_3.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom-left star -->
    <item android:top="30dp" android:left="0dp">
        <bitmap
            android:src="@drawable/star"
            android:gravity="left|top" />
    </item>
    <!-- Bottom-right star -->
    <item android:top="30dp" android:left="45dp">
        <bitmap
            android:src="@drawable/star"
            android:gravity="left|top" />
    </item>
    <!-- Top star -->
    <item android:top="0dp" android:left="30dp">
        <bitmap
            android:src="@drawable/star"
            android:gravity="left|top" />
    </item>
</layer-list>

